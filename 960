#include <bits/stdc++.h>

using namespace std;
int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	cout.tie(0);
    double R,r,h,alt,ust,yan,cem;
    cin>>R>>r>>h;
    alt=3.1415*R*R;
    ust=3.1415*r*r;
    yan=3.1415*(R+r)*sqrt((R-r)*(R-r)+h*h);
    cem = alt + ust + yan;
    cout<<fixed<<setprecision(2)<<cem;




}

